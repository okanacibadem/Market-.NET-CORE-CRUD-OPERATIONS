@model IEnumerable<Market.Models.Reyonlar>

@{
    ViewData["Title"] = "Index";
}

<h1>Reyonlar</h1>

<p>
    <a asp-action="Create">Yeni Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.reyonAdi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.reyonAdi)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.reyonNo">Güncelle</a> |          
                <a asp-action="Delete" asp-route-id="@item.reyonNo">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
